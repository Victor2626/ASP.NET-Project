<style>
    body {
        margin-bottom: 60px;
        background-color: #a29de3;
        background-size: 100%;
    }
</style>
<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person-fill"> </i> <b>UserName:</b> @user.UserName</p>

                        <p><i class="bi bi-envelope"></i> <b>Email utilizator:</b> @user.Email</p>


                        @if (@user.FirstName != null)
                        {
                            <p><i class="bi bi-person"> </i> <b>Nume utilizator:</b> @user.FirstName</p>
                        }


                        @if (@user.LastName != null)
                        {
                            <p><i class="bi bi-person"> </i> <b>Prenume utilizator:</b> @user.LastName</p>
                        }


                        @if (@user.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> <b>Telefon utilizator:</b> @user.PhoneNumber</p>
                        }
                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">

                        <div> <a class="btn btn-sm btn-success" href="/Users/Edit/@user.Id"> Editare utilizator</a> </div>

                        <div> <a class="btn btn-sm btn-success" href="/Users/Show/@user.Id"> Vizualizare utilizator</a> </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>

