@model WorkplaceCollaboration.Models.User

<style>
    body {
        margin-bottom: 60px;
        background-color: #a29de3;
        background-size: 100%;
    }
</style>
<div class="card mt-3" style="height:100%; width: 100%;">

    <div class="card-body d-flex justify-content-between flex-column">
        <div>
            <p><i class="bi bi-person"> </i> <b>UserName:</b> @Model.UserName</p>

            <p><i class="bi bi-envelope"></i> <b>Email utilizator:</b> @Model.Email</p>

            @if (@Model.FirstName != null)
            {
                <p><i class="bi bi-person"> </i> <b>Nume utilizator:</b> @Model.FirstName</p>
            }


            @if (@Model.LastName != null)
            {
                <p><i class="bi bi-person"> </i> <b>Prenume utilizator:</b> @Model.LastName</p>
            }


            @if (@Model.PhoneNumber != null)
            {
                <p><i class="bi bi-phone"></i> <b>Telefon utilizator:</b> @Model.PhoneNumber</p>
            }

            @if (ViewBag.Roles.Count > 0)
            {
                <p><i class="bi bi-person"> </i> <b>Roluri utilizator:</b></p>
                @foreach (var role in ViewBag.Roles)
                {
                    <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@role</span>
                }
            }

            <br />
            <br />

        </div>

        <div class="d-flex flex-row justify-content-between p-3">

            @if ((string)Model.Id != ViewBag.UserCurent)
            {
                @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", method: FormMethod.Post, routeValues: new { id = @Model.Id }))
                {

                    <button class="btn btn-danger" type="submit">Sterge utilizator</button>

                }
            }
        </div>
    </div>
</div>






