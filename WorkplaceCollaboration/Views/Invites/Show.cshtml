@model WorkplaceCollaboration.Models.Invite


<div class="row">

    <div class="col-12">
        @*<h5 class="card-title" name="Name">@ViewBag.Invites.Channel.Title</h5>
        @if (ViewBag.EsteAdmin)
        {
            <i class="bi bi-person"> Creat de: </i> @ViewBag.Invites.Channel.CreatorId

        }
        
        <br />
        <br />
        Invitatiile canalului:
        @ViewBag.Invites.User.UserName*@
        <br /><br />
    </div>


    @foreach (WorkplaceCollaboration.Models.Invite invite in ViewBag.Invites)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> UserName: @invite.User.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email utilizator: @invite.User.Email</p>


                        @if (invite.User.FirstName != null)
                        {
                            <p><i class="bi bi-person"> </i> Nume utilizator: @invite.User.FirstName</p>
                        }


                        @if (invite.User.LastName != null)
                        {
                            <p><i class="bi bi-person"> </i> Prenume utilizator: @invite.User.LastName</p>
                        }


                        @if (invite.User.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Telefon utilizator: @invite.User.PhoneNumber</p>
                        }

                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">


                        <div>
                            <form method="post" action="/Invites/Accept/@invite.Id">

                                <button class="btn btn-success" type="submit">Accepta</button>

                            </form>
                        </div>

                        <div>
                            <form method="post" action="/Invites/Reject/@invite.Id">

                                <button class="btn btn-danger" type="submit">Respinge</button>

                            </form>
                        </div>
                    </div>
                </div>
                </div>
            </div>
    }

</div>